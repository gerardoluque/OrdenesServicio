@using Infragistics.Web.Mvc
@model ZOE.OS.Modelo.ProyectoAbono

@{
    ViewBag.Title = "Abonar";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<h2>Abonar minutos al proyecto</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(function () {
        $("#proyecto-abonar")
        .button()
        .click(function () {
        });
    });
</script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend> Proyecto </legend>

        <table border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td style="color:Black;">Folio:</td>
                <td style="color:Black; font-size:large;">@ViewBag.ProyectoId</td>
            </tr>
            <tr>
                <td style="color:Black;">Cliente:</td>
                <td>@ViewBag.Cliente</td>
            </tr>
            <tr>
                <td style="color:Black;">Descripción:</td>
                <td>@ViewBag.ProyectoDescr</td>
            </tr>
            <tr>
                <td style="color:Black;">Tipo de Proyecto:</td>
                <td>@ViewBag.TipoProyectoDescr</td>
            </tr>
            <tr>
                <td style="color:Black;">Saldo Actual (minutos):</td>
                <td>@ViewBag.Saldo</td>
            </tr>
        </table>

    </fieldset>

    <fieldset>
        <legend> Datos del Abono </legend>

        @Html.HiddenFor(model => model.ProyectoId, new { @Value = @ViewBag.ProyectoId })

        <div class="editor-label">
            @Html.LabelFor(model => model.Referencia)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Referencia)
            @Html.ValidationMessageFor(model => model.Referencia)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.FechaAbono)
        </div>
        <div class="editor-field">
           @(Html.Infragistics().DatePickerFor(model => model.FechaAbono)
            .ID("dtpFecha")
            .Width(250)
            .DateDisplayFormat("dateTime")
            .ButtonType(TextEditorButtonType.DropDownAndSpin)
            .Required(true)
            .DataMode(DateTimeEditorDataMode.Date)
            .Value(@System.DateTime.Now)
            .ValidatorOptions(m => m.AnimationShow(0).
                                     AnimationHide(0).
                                     OnBlur(false).
                                     OnChange(false).
                                     OnSubmit(true).
                                     KeepFocus(ValidatorKeepFocus.Always).
                                     CustomErrorMessage("La fecha de abono es requerida"))
            .Render()
            )                   

            @*@Html.EditorFor(model => model.Minutos)*@
            @Html.ValidationMessageFor(model => model.FechaAbono)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Minutos)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Minutos)
            @Html.ValidationMessageFor(model => model.Minutos)
        </div>

        <p>
            <input id="proyecto-abonar" type="submit" value="Abonar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver a Proyectos", "Index")
</div>
