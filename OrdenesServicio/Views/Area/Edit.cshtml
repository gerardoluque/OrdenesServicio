@model ZOE.OS.Modelo.Area

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<h2>Editar</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Area</legend>

        @Html.HiddenFor(model => model.AreaId)

        <div class="editor-label">
            @Html.LabelFor(model => model.AreaDescr)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AreaDescr)
            @Html.ValidationMessageFor(model => model.AreaDescr)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TipoArea)
        </div>
        <div class="editor-field">
            @*@Html.EditorFor(model => model.TipoArea)*@
            @Html.DropDownListFor(
                 model => model.TipoArea,
                        new SelectList(
                                new List<Object>{ 
                                    new { value = 1 , text = "Zoe"  },
                                    new { value = 2 , text = "Cliente" }
                                },
                                "value",
                                "text",
                             Model.TipoArea
                    ), new { @class = "drop-down" }
            )
            @Html.ValidationMessageFor(model => model.TipoArea)
        </div>

        <p>
            <input type="submit" value="Guardar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>
