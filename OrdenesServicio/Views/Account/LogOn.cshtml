@model ZOE.OrdenesServicio.Models.LogOnModel

@{
    ViewBag.Title = @ZOE.OrdenesServicio.Views.Account.AccountResource.LogonAcceso;
}

<h2> @ZOE.OrdenesServicio.Views.Account.AccountResource.LogonAcceso </h2>
<p>
    @*Introduzca su usuario y contraseña*@
    @ZOE.OrdenesServicio.Views.Account.AccountResource.LogonIntroduzca
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@*@Html.ValidationSummary(true, @ZOE.OrdenesServicio.Views.Account.AccountResource.LogonSummaryError)*@
@Html.ValidationSummary(false)

<script type="text/javascript">
    function clearValidationSummary() {
        $('.field-validation-error')
               .removeClass('field-validation-error')
                .addClass('field-validation-valid');

        $('.input-validation-error')
                .removeClass('input-validation-error')
                 .addClass('valid');
    }

    $(function () {
        $("#login")
        .button()
        .click(function () {
            var continuar = true;
            var userName = $('#userName').val();

            $.ajax({
                url: '@Url.Content("~/Account/VerificarUsuarioInstancias")',
                type: 'POST',
                data: JSON.stringify({ nombreUsuario: userName }),
                async: false,
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    if (data.success) {
                        if (data.Count > 1) {
                           CargarEmpresas();
                           $("#dialog-select-empresa").dialog("open");
                           continuar = false
                        }
                        else {
                            continuar = true;
                        }
                    }
                    else {
                        alert("@ZOE.OrdenesServicio.Views.Account.AccountResource.LogonErrorBuscarUsuario");
                        continuar = false;
                    }
                },
                error: function () {
                    //alert("Ocurrio un error al tratar de buscar los datos del usuario");
                    alert("@ZOE.OrdenesServicio.Views.Account.AccountResource.LogonErrorBuscarUsuario");
                    continuar = false;
                }
            });

            return continuar;
        });
    });

    $(function () {
        $("#dialog-select-empresa").
            dialog({
                autoOpen: false,
                height: 250,
                width: 550,
                modal: true,
                buttons: {
                    "@Resources.SOResource.DialogBotonCancelar": function () {
                        $(this).dialog("close");
                    },
                    "@Resources.SOResource.DialogBotonAceptar": function () {
                        var bValid = true;

                        bValid = $("form[name='form-select-empresa']").validate().form();

                        if (bValid) { 
                            $("#contactoid").val($("#ContactoIdSeleccionado").val());                   
                            $("form[name='form-login']").submit();
                            $(this).dialog("close");
                        }
                    }
                },

                close: function () {
                    clearValidationSummary();
                    $('#ContactoIdSeleccionado').val("")
                }
            });
    });

     function CargarEmpresas() {
         var urlController = '@Url.Content("~/Account/ObtenerEmpresasPorUserName/")';

         $.ajax({
             url: '@Url.Content("~/Account/ObtenerEmpresasPorUserName")',
             type: 'POST',
             data: JSON.stringify({ nombreUsuario: $('#userName').val() }),
             contentType: 'application/json; charset=utf-8',
             success: function (data) {
                 if (data.success) {
                     $("#ContactoIdSeleccionado").fillSelect(data.empresas, "@ZOE.OrdenesServicio.Views.Account.AccountResource.LogonSelectEmpresa");
                 }
                 else {
                     alert("@ZOE.OrdenesServicio.Views.Account.AccountResource.LogonErrorBuscarEmpresa");
                 }
             },
             error: function (e) {
                 alert("@ZOE.OrdenesServicio.Views.Account.AccountResource.LogonErrorBuscarEmpresa");
             }
         });                        
    }

    $.fn.clearSelect = function() {
         return this.each(function() {
           if (this.tagName == 'SELECT')
                this.options.length = 0;
        });
    }

    $.fn.fillSelect = function(data, optionTextDefault) {
         return this.clearSelect().each(function() {
            if (this.tagName == 'SELECT') {
                var dropdownList = this;

                var o = new Option(optionTextDefault, "");
                /// jquerify the DOM object 'o' so we can use the html method
                $(o).html(optionTextDefault);
                dropdownList.add(o);

                $.each(data, function(index, optionData) {
                    var option = new Option(optionData.Empresa, optionData.ContactoId);
                    
                    if ($.browser.msie) {
                        dropdownList.add(option);
                    }
                    else {
                        dropdownList.add(option, null);
                    }
                });
            }
        });
     }
</script>

@using (Html.BeginForm("LogOn", "Account", FormMethod.Post, new { name = "form-login", id = "loginForm" }))
{
    <div>
        <fieldset>
            <legend> @ZOE.OrdenesServicio.Views.Account.AccountResource.LogonFieldSet </legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName, new { @id = "userName" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            @Html.HiddenFor(m => m.ContactoId, new { @id = "contactoid" })
            @Html.ValidationMessageFor(m => m.ContactoId)

@*            <div class="editor-label">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>*@

            <p>
                <input id="login" type="submit" value="@ZOE.OrdenesServicio.Views.Account.AccountResource.logonBotonEntrar" />
            </p>
        </fieldset>
    </div>
}

<div id="dialog-select-empresa" title="@ZOE.OrdenesServicio.Views.Account.AccountResource.LogonDialogSelectEmp">

    @using (Html.BeginForm(null, null, FormMethod.Post, new { name = "form-select-empresa", id = "empresaForm" }))
    {
        @Html.ValidationSummary(true)

         <div>
         <span class="ui-icon ui-icon-alert" style="float: left; margin: 0 7px 20px 0;"></span>
         <div>@ZOE.OrdenesServicio.Views.Account.AccountResource.LogonLblMasUnaEmpresa1</div>
         <div>@ZOE.OrdenesServicio.Views.Account.AccountResource.LogonLblMasUnaEmpresa2</div>
        </div>
        <p></p>
        <table>
            <tr>                
                <td class="display-label-forma-captura-dialog">
                    @ZOE.OrdenesServicio.Views.Account.AccountResource.LogonDialogLblEmp
                </td>
                <td>
                    <select id="ContactoIdSeleccionado" name="ContactoIdSeleccionado" data-val="true" data-val-required="@ZOE.OrdenesServicio.Views.Account.AccountResource.LogonCampoEmpresaReq">
                    </select>   
                    <div>
                        <span class="field-validation-valid" data-valmsg-for="ContactoIdSeleccionado" data-valmsg-replace="true"></span>
                    </div>         
                </td>
            </tr>            
        </table>
    }

</div>
